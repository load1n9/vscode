{
  "name": "whistle-lang",
  "displayName": "Whistle Lang",
  "author": "Whistle Team",
  "publisher": "whistle",
  "icon": "icons/icon128.png",
  "description": "Support for the whistle language",
  "version": "1.7.6",
  "engines": {
    "vscode": "^1.67.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whistle-lang/vscode"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "whistle",
        "path": "snippets/whistle.json"
      }
    ],
    "languages": [
      {
        "id": "whistle",
        "aliases": [
          "Whistle",
          "whistle"
        ],
        "extensions": [
          ".whi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    
    "grammars": [
      {
        "language": "whistle",
        "scopeName": "source.whistle",
        "path": "./syntaxes/whistle.tmLanguage.json"
      }
    ],

    "commands": [
      {
        "command": "whistle.build.workspace",
        "title": "Whistle: Build Workspace",
        "description": "Build the current project using 'whistle compile'"
      },
      {
        "command": "whistle.format.file",
        "title": "Whistle: Format File",
        "description": "Formats the current whistle file"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:whistle",
    "onDebugInitialConfigurations",
    "onCommand:whistle.format.file"
  ],
  "main": "./out/extension",
  "devDependencies": {
    "js-yaml": "^3.14.0",
    "vsce": "^1.87.1",
    "@types/semver": "7.3.9",
    "@types/vscode": "1.67.0",
    "vscode-test": "^1.6.1",
    "@types/mocha": "^2.2.48",
    "@types/node": "^15.6.0",
    "vscode": "^1.0.1"
  },
  "dependencies": {
    "esbuild": "^0.12.1",
    "lodash-es": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "vsce": "^2.11.0"
  },
  "scripts": {
    "compile": "esbuild --bundle --sourcemap=external --minify --external:vscode src/extension.ts --outdir=out --platform=node --format=cjs",
    "build": "js-yaml syntaxes/whistle.tmLanguage.yml > syntaxes/whistle.tmLanguage.json && js-yaml snippets/whistle.yml > snippets/whistle.json",
    "package": "vsce package",
    "package:npm": "vsce package --no-yarn",
    "test": "npm run compile && npm run package:npm && node ./node_modules/vscode/bin/test",
    "all": "npm run compile && npm run build && npm run package:npm"
  }
}